{
    "include": [
        "src/**/*",
        "typings",
        "eslint.config.js"
    ],
    "compilerOptions": {
        "target": "es2022",
        "traceResolution": false,
        "importHelpers": true,
        "removeComments": false,
        "noEmitHelpers": false,
        "allowJs": false,
        "rootDir": "./src",
        "outDir": "./dist",
        "pretty": false,
        "module": "ESNext",
        "jsx": "react",
        "moduleResolution": "Bundler",
        "declaration": true,
        "sourceMap": false,
        "noImplicitAny": false,
        "noFallthroughCasesInSwitch": false,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "typeRoots": [
            "node_modules/@types",
            "typings"
        ]
    }
}